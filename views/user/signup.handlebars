<div class="container">
  <div class="columns">
    <div class="column"></div>

    <div class="column is-half">
      <div class="card mt-6">
        <div class="card-content">
          <h1 class="h2 text-center">Create account</h1>
          <form action="/api/user/signup">
            <div class="field">
              <label for="user-login-email" class="label">Email</label>
              <input required placeholder="Please enter your Email address" type="email" class="input">
            </div>

            <div class="field">
              <label for="user-signup-password" class="label">Password</label>
              <input required placeholder="Please enter your password" type="password" class="input" pattern="(?=.*[a-z])(?=.*[A-Z])(?=.*\d)[a-zA-Z\d]{8,}$">
              <p class="help">Password must be 8 chars long, include upper/lowercase + a number</p>
            </div>

            <div class="field">
              <input type="submit" value="Create account" class="button is-primary is-fullwidth">
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="column"></div>
  </div>
</div>